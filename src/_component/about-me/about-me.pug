//- data come here
-
    var header = "About me"
    var imagePath = "asset/image/profile picture.png"
    var myFullName = "Bianca Andrei"
    var myTitle = "Junior Front End Developer"
    var slogan = `If you can think it, I can web it.`
    var achievement = {
        title: 'Achievement',
        content: `A successful website does three things:It attracts the right kinds of visitors.Guides them to the main services or product you offer.
                  Collect Contact details for future ongoing relation.`,
    }
    var coolStuff = {
        title: 'Grab cool stuff',
        buttonList: [
            {
                url: 'https://github.com/biancalina',
                icon: 'github',
                label: 'Click to visit the GitHub project source',
            }
            ,{
                url: 'asset/doc/cv-bianca.docx',
                icon: 'file-word',
                label: 'Click to download "CV" Microsoft Word version',
            }
        ]
    }
//- the view comes here
#about-me
.about-me
    .about-me__header=header
    .about-me__avatar-wrapper
        img.about-me__avatar(src=imagePath)
    .about-me__full-name=myFullName
    .about-me__title=myTitle
    .about-me__slogan=slogan

    .about-me__title=achievement.title
    .about-me__content=achievement.content

    .about-me__title=coolStuff.title
    .about-me__link-list
        each button in coolStuff.buttonList
            a.about-me__link(href=button.url)
                span.about-me__link-description=button.label
                span(class=`my-cv-${button.icon}`)
